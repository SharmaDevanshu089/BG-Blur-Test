{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bg-blur-test",
  "version": "0.1.0",
  "identifier": "com.sharm.bg-blur-test",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Testing Blur In Tauri",
        "width": 800,
        "height": 600,
        "transparent": true,
        "alwaysOnTop": false,
        "focus": false,
        "backgroundColor": null,
        "decorations": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
